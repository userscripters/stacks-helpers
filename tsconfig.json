{
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2019",
        "outDir": "dist",
        "declaration": true,
        "moduleResolution": "node",
        "module": "es2020"
    },
    "include": ["src"],
    "exclude": ["dist"]
}
